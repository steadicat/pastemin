@require reset

unit = 8px

// Type
size(font, line)
  font-size font px
  line-height line px
html
  font-family 'Lato', sans-serif
  size 12, unit * 3
#editor.ace_editor
  font-family 'Source Code Pro', monospace
.b
  font-weight bold
.serif
  font-family 'Playfair Display', sans-serif
.title
  @extend .serif
  font-weight 900
.subtitle
  @extend .serif
  font-style italic
  font-weight 400
.text-xs
  size 10, unit * 2
.text-s
  size 12, unit * 2
.text-m
  size 18, unit * 3
.text-l
  size 24, unit * 4
.text-xl
  size unit * 8, unit * 8

.nowrap
  whitespace nowrap

// Cursors
.pointer
  cursor pointer

// Color

colors = {
  white: #fff,
  purple: #81549f,
  gray: #aeafad,
  light-gray: lighten(#aeafad, 50%),
  green: #718c00,
  black: #4d4d4c
}

for name, color in colors
  .{name}
    color color
  .{name}-border
    border 1px solid color
  .{name}-bg
    background color

html
  @extend .black

// Buttons
.rounded
  border-radius 5px
.rounded-bottom
  border-radius 0 0 5px 5px
.rounded-top
  border-radius 5px 5px 0 0
.rounded-rb
  border-radius 0 5px 5px 5px
.button
  @extend .rounded
  line-height 18px

for name, color in colors
  .button-{name}
    @extend .{name}
    @extend .{name}-border
    border-width 1px
  .button-{name}-fill
    @extend .white
    @extend .{name}-border
    @extend .{name}-bg
    border-width 1px

a
  @extend .purple

.bt
  border-width: 1px 0 0 0
.br
  border-width: 0 1px 0 0
.bb
  border-width: 0 0 1px 0
.bl
  border-width: 0 0 0 1px

#editor
  width 100%
  height 100%

.hidden
  opacity 0

// Forms

.input
  @extend .gray-border
  @extend .rounded
  @extend .gray
  padding 5px 8px 5px
  margin 0
  line-height 16px

.t-width
  transition width 0.1s
.t-height
  transition height 0.5s ease-in-out

@require layout
@require spacing
