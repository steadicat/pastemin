unit = 8px

size(font, line)
  font-size font px
  line-height line px

.b
  font-weight bold
.i
  font-style italic
.serif
  font-family 'Playfair Display', sans-serif
.title
  @extend .serif
  font-weight 900
.subtitle
  @extend .serif
  @extend .i
  font-weight 400
.text-s
  size 10, unit * 2
.text-m
  size 13, unit * 3
.text-l
  size 24, unit * 4
.text-xl
  size unit * 8, unit * 8

html
  @extend .text-m
  font-family 'Lato', sans-serif
#editor.ace_editor
  font-family 'Source Code Pro', monospace